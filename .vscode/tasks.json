{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "suppressTaskName": true,

    "linux": {
        "command": "sh",
        "args": ["examples/001/test_run.sh"]
    },
    "osx": {
        "command": "sh",
        "args": ["examples/001/test_run.sh"]
    },
    "windows": {
        "command": "call",
        "args": ["examples/001/test_run.bat"]
    },
    "tasks": [
        {
            "taskName": "build",
            "showOutput": "always",            
            "isBuildCommand": true
        },
        {
            "taskName": "test",
            "showOutput": "always",
            "args": ["-open"],
            "linux": {
                "args": ["-run"]
            }
        }
    ]
}